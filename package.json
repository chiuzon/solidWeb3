{
  "name": "@chiuzon/solidweb3",
  "description": "Minimal web3 library for SolidJS",
  "author": "Chiuzon",
  "contributors": [
    "Chiuzon"
  ],
  "license": "MIT",
  "version": "0.0.3",
  "homepage": "https://github.com/chiuzon/solidWeb3#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/chiuzon/solidWeb3"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "solid": "./dist/index.jsx",
      "default": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc && rollup -c",
    "prepublishOnly": "npm run build",
    "test": "jest && npm run test:types",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage && npm run test:types",
    "test:types": "tsc --project tsconfig.test.json"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-node-resolve": "13.0.5",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "@web3-react/abstract-connector": "^6.0.7",
    "@web3-react/types": "^6.0.7",
    "babel-preset-solid": "^1.1.0",
    "jest": "^27.2.5",
    "rollup": "^2.52.1",
    "rollup-plugin-terser": "^7.0.2",
    "solid-jest": "^0.2.0",
    "solid-js": "^1.1.0",
    "typescript": "~4.4.3"
  },
  "peerDependencies": {
    "solid-js": "^1.0.0"
  },
  "jest": {
    "preset": "solid-jest/preset/browser"
  }
}